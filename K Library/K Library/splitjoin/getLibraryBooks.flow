<?xml version="1.0" encoding="UTF-8"?>
<bpel:process name="getLibraryBooks"
              targetNamespace="http://xmlns.oracle.com/K_Library/K_Library/"
              xmlns:tns="http://xmlns.oracle.com/K_Library/K_Library/"
              xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
              xmlns:rescon="http://www.bea.com/alsb/flow/resources/config"
              xmlns:bea="http://www.bea.com/bpel/ui/extensions"
              xmlns:ext="http://www.bea.com/bpel/extensions"
              xmlns:expr="http://www.bea.com/wli/sb/stages/config"
              xmlns:trf="http://www.bea.com/wli/sb/stages/transform/config"
              xmlns:bind="http://www.library.com" 
              bea:name="getLibraryBooks"
              rescon:snippetVersion="1.0"
              xmlns:ns0="http://www.bea.com/wli/sb/reference" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <bpel:partnerLinks>
        <bpel:partnerLink name="getLibraryBooks" partnerLinkType="tns:getLibraryBooks"
                          myRole="getLibraryBooks">
	       </bpel:partnerLink>
        <bpel:partnerLink name="getBrisbaneLibrary" partnerLinkType="tns:getBrisbaneLibrary"
                          partnerRole="getBrisbaneLibrary"/>
        <bpel:partnerLink name="getPerthLibrary" partnerLinkType="tns:getPerthLibrary" partnerRole="getPerthLibrary"/>
        <bpel:partnerLink name="getSydneyLibrary" partnerLinkType="tns:getSydneyLibrary"
                          partnerRole="getSydneyLibrary"/>
    </bpel:partnerLinks>

	   <bpel:variables>
        <bpel:variable name="request"
	                      messageType="bind:getLibraryBooksRequest">
	       </bpel:variable>
	       <bpel:variable name="getSydneyBooks" messageType="bind:getLibraryBooksDataResponse">
	       </bpel:variable>
        <bpel:variable name="getBrisbaneBooks" messageType="bind:getLibraryBooksDataResponse"/>
        <bpel:variable name="getPerthBooks" messageType="bind:getLibraryBooksDataResponse"/>
        <bpel:variable name="getAllBooks" messageType="bind:getLibraryBooksDataResponse"/>
    </bpel:variables>

    <bpel:sequence>
        <bpel:receive partnerLink="getLibraryBooks" operation="getLibraryBooks" variable="request" createInstance="yes">
	           <rescon:receiveInfo>
                <rescon:wsdl ref="K Library/wsdl/KLibrary" binding="bind:LibraryBinding"/>
            </rescon:receiveInfo>
        </bpel:receive>
        <bpel:assign>
            <bpel:extensionAssignOperation>
                <trf:assign varName="getAllBooks.responsePart">
                    <trf:expr>
                        <expr:xqueryText>&lt;getLibraryBooksDataResponse&gt;&lt;/getLibraryBooksDataResponse&gt;</expr:xqueryText>
                    </trf:expr>
                </trf:assign>
            </bpel:extensionAssignOperation>
        </bpel:assign>
        <bpel:flow>
            <bpel:scope bea:name="Brisbane">
                <bpel:sequence>
                    <bpel:invoke partnerLink="getBrisbaneLibrary" operation="getLibraryBooks" inputVariable="request"
                                 outputVariable="getBrisbaneBooks">
                        <rescon:invokeInfo>
                            <rescon:service ref="K Library/pipeline/getBrisbaneLibrary"
                                            xsi:type="ns0:BusinessServiceRef"/>
                        </rescon:invokeInfo>
                    </bpel:invoke>
                </bpel:sequence>
            </bpel:scope>
            <bpel:scope bea:name="Perth">
                <bpel:sequence>
                    <bpel:invoke partnerLink="getPerthLibrary" operation="getLibraryBooks" inputVariable="request"
                                 outputVariable="getPerthBooks">
                        <rescon:invokeInfo>
                            <rescon:service ref="K Library/pipeline/getPerthLibrary" xsi:type="ns0:BusinessServiceRef"/>
                        </rescon:invokeInfo>
                    </bpel:invoke>
                </bpel:sequence>
            </bpel:scope>
            <bpel:scope bea:name="Sydney">
                <bpel:sequence>
                    <bpel:invoke partnerLink="getSydneyLibrary" operation="getLibraryBooks" inputVariable="request"
                                 outputVariable="getSydneyBooks">
                        <rescon:invokeInfo>
                            <rescon:service ref="K Library/pipeline/getSydneyLibrary"
                                            xsi:type="ns0:BusinessServiceRef"/>
                        </rescon:invokeInfo>
                    </bpel:invoke>
                </bpel:sequence>
            </bpel:scope>
        </bpel:flow>
        <bpel:assign>
            <bpel:extensionAssignOperation>
                <trf:assign varName="getAllBooks.responsePart">
                    <trf:expr>
                        <expr:xqueryTransform>
                            <expr:resource ref="K Library/query/getAllLibraryBooksCombined"/>
                            <expr:param name="getSydneyLibrary">
                                <expr:path>$getSydneyBooks.responsePart</expr:path>
                            </expr:param>
                            <expr:param name="getPerthLibrary">
                                <expr:path>$getPerthBooks.responsePart</expr:path>
                            </expr:param>
                            <expr:param name="getBrisbaneLibrary">
                                <expr:path>$getBrisbaneBooks.responsePart</expr:path>
                            </expr:param>
                        </expr:xqueryTransform>
                    </trf:expr>
                </trf:assign>
            </bpel:extensionAssignOperation>
        </bpel:assign>
        <bpel:reply partnerLink="getLibraryBooks" operation="getLibraryBooks" variable="getAllBooks"></bpel:reply>
    </bpel:sequence>
</bpel:process>