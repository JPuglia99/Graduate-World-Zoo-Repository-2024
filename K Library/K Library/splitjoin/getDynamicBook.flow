<?xml version="1.0" encoding="UTF-8"?>
<bpel:process name="getDynamicBook"
              targetNamespace="http://xmlns.oracle.com/K_Library/K_Library/"
              xmlns:tns="http://xmlns.oracle.com/K_Library/K_Library/"
              xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
              xmlns:rescon="http://www.bea.com/alsb/flow/resources/config"
              xmlns:bea="http://www.bea.com/bpel/ui/extensions"
              xmlns:ext="http://www.bea.com/bpel/extensions"
              xmlns:expr="http://www.bea.com/wli/sb/stages/config"
              xmlns:trf="http://www.bea.com/wli/sb/stages/transform/config"
              xmlns:bind="http://www.library.com" 
              bea:name="getDynamicBook"
              rescon:snippetVersion="1.0"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ns0="http://www.bea.com/wli/sb/reference"
              xmlns:lib="http://www.KLibrary.com/librarySchema"
              xmlns:ns1="http://www.bea.com/wli/sb/stages/logging/config">
    <bpel:partnerLinks>
        <bpel:partnerLink name="getDynamicBook" partnerLinkType="tns:getDynamicBook"
                          myRole="getDynamicBook">
	       </bpel:partnerLink>
        <bpel:partnerLink name="getSydneyLibrary" partnerLinkType="tns:getSydneyLibrary"
                          partnerRole="getSydneyLibrary"/>
        <bpel:partnerLink name="getBrisbaneLibrary" partnerLinkType="tns:getBrisbaneLibrary"
                          partnerRole="getBrisbaneLibrary"/>
        <bpel:partnerLink name="getPerthLibrary" partnerLinkType="tns:getPerthLibrary" partnerRole="getPerthLibrary"/>
    </bpel:partnerLinks>

	   <bpel:variables>
        <bpel:variable name="request"
	                      messageType="bind:getDynamicBookRequest">
	       </bpel:variable>
	       <bpel:variable name="getDynamicBooksList" messageType="bind:getDynamicBookResponse">
	       </bpel:variable>
        <bpel:variable name="getSydneyLibrary" messageType="bind:getLibraryBooksDataResponse"/>
        <bpel:variable name="libraryRequest" messageType="bind:getLibraryBooksRequest"/>
        <bpel:variable name="getPerthLibrary" messageType="bind:getLibraryBooksDataResponse"/>
        <bpel:variable name="getBrisbaneLibrary" messageType="bind:getLibraryBooksDataResponse"/>
        <bpel:variable name="getAllBooksCombinedList" messageType="bind:getLibraryBooksDataResponse"/>
    </bpel:variables>

    <bpel:sequence>
        <bpel:receive partnerLink="getDynamicBook" operation="getSpecificLibraryBooks" variable="request" createInstance="yes">
	           <rescon:receiveInfo>
                <rescon:wsdl ref="K Library/wsdl/KLibrary" binding="bind:LibraryBinding"/>
            </rescon:receiveInfo>
        </bpel:receive>
        <bpel:assign>
            <bpel:extensionAssignOperation>
                <trf:assign varName="libraryRequest.requestPart">
                    <trf:expr>
                        <expr:xqueryText>&lt;lib:getLibraryBooksRequest xmlns:lib="http://www.KLibrary.com/librarySchema"&gt;
  &lt;lib:libraryName&gt;library&lt;/lib:libraryName&gt;
&lt;/lib:getLibraryBooksRequest&gt;</expr:xqueryText>
                    </trf:expr>
                </trf:assign>
            </bpel:extensionAssignOperation>
        </bpel:assign>
        <bpel:assign>
            <bpel:extensionAssignOperation>
                <trf:assign varName="getDynamicBooksList.responsePart">
                    <trf:expr>
                        <expr:xqueryText>&lt;getDynamicBooksResponse/&gt;</expr:xqueryText>
                    </trf:expr>
                </trf:assign>
            </bpel:extensionAssignOperation>
        </bpel:assign>
        <bpel:if bea:name="Library Segregator">
            <bpel:condition>normalize-space($request.requestPart/lib:libraryName) = ""</bpel:condition>
            <bpel:sequence>
                <bpel:empty/>
                <bpel:flow bea:name="Retrieve Book Details">
                    <bpel:scope bea:name="Sydney">
                        <bpel:sequence>
                            <bpel:invoke operation="getLibraryBooks" outputVariable="getSydneyLibrary"
                                         inputVariable="libraryRequest" partnerLink="getSydneyLibrary">
                                <rescon:invokeInfo>
                                    <rescon:service xsi:type="ns0:BusinessServiceRef"
                                                    ref="K Library/pipeline/getSydneyLibrary"/>
                                </rescon:invokeInfo>
                            </bpel:invoke>
                        </bpel:sequence>
                    </bpel:scope>
                    <bpel:scope bea:name="Perth">
                        <bpel:sequence>
                            <bpel:invoke outputVariable="getPerthLibrary" partnerLink="getPerthLibrary"
                                         operation="getLibraryBooks" inputVariable="libraryRequest">
                                <rescon:invokeInfo>
                                    <rescon:service xsi:type="ns0:BusinessServiceRef"
                                                    ref="K Library/pipeline/getPerthLibrary"/>
                                </rescon:invokeInfo>
                            </bpel:invoke>
                        </bpel:sequence>
                    </bpel:scope>
                    <bpel:scope bea:name="Brisbane">
                        <bpel:sequence>
                            <bpel:invoke outputVariable="getBrisbaneLibrary" partnerLink="getBrisbaneLibrary"
                                         operation="getLibraryBooks" inputVariable="libraryRequest">
                                <rescon:invokeInfo>
                                    <rescon:service xsi:type="ns0:BusinessServiceRef"
                                                    ref="K Library/pipeline/getBrisbaneLibrary"/>
                                </rescon:invokeInfo>
                            </bpel:invoke>
                        </bpel:sequence>
                    </bpel:scope>
                </bpel:flow>
                <bpel:assign>
                    <bpel:extensionAssignOperation bea:name="Combine to AllBooks">
                        <trf:assign varName="getAllBooksCombinedList.responsePart">
                            <trf:expr>
                                <expr:xqueryTransform>
                                    <expr:resource ref="K Library/query/getAllLibraryBooksCombined"/>
                                    <expr:param name="getSydneyLibrary">
                                        <expr:path>$getSydneyLibrary.responsePart</expr:path>
                                    </expr:param>
                                    <expr:param name="getPerthLibrary">
                                        <expr:path>$getPerthLibrary.responsePart</expr:path>
                                    </expr:param>
                                    <expr:param name="getBrisbaneLibrary">
                                        <expr:path>$getBrisbaneLibrary.responsePart</expr:path>
                                    </expr:param>
                                </expr:xqueryTransform>
                            </trf:expr>
                        </trf:assign>
                    </bpel:extensionAssignOperation>
                </bpel:assign>
                <bpel:assign>
                    <bpel:extensionAssignOperation>
                        <ns1:log>
                            <ns1:expr>
                                <expr:xqueryText>$getAllBooksCombinedList.responsePart</expr:xqueryText>
                            </ns1:expr>
                            <ns1:logLevel>error</ns1:logLevel>
                            <ns1:message>####ALL BOOKS COMBINED####</ns1:message>
                        </ns1:log>
                    </bpel:extensionAssignOperation>
                </bpel:assign>
            </bpel:sequence>
            <bpel:elseif>
                <bpel:condition>contains("sydney library", normalize-space(translate($request.requestPart/lib:libraryName, 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz')))</bpel:condition>
                <bpel:sequence>
                    <bpel:empty/>
                    <bpel:invoke operation="getLibraryBooks" outputVariable="getSydneyLibrary"
                                 inputVariable="libraryRequest" partnerLink="getSydneyLibrary">
                        <rescon:invokeInfo>
                            <rescon:service xsi:type="ns0:BusinessServiceRef"
                                            ref="K Library/pipeline/getSydneyLibrary"/>
                        </rescon:invokeInfo>
                    </bpel:invoke>
                    <bpel:assign>
                        <bpel:extensionAssignOperation bea:name="Combine to AllBooks">
                            <trf:assign varName="getAllBooksCombinedList.responsePart">
                                <trf:expr>
                                    <expr:xqueryText>$getSydneyLibrary.responsePart</expr:xqueryText>
                                </trf:expr>
                            </trf:assign>
                        </bpel:extensionAssignOperation>
                    </bpel:assign>
                </bpel:sequence>
            </bpel:elseif>
            <bpel:elseif>
                <bpel:condition>contains("perth library", normalize-space(translate($request.requestPart/lib:libraryName, 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz')))</bpel:condition>
                <bpel:sequence>
                    <bpel:empty/>
                    <bpel:invoke operation="getLibraryBooks" outputVariable="getPerthLibrary"
                                 inputVariable="libraryRequest" partnerLink="getPerthLibrary">
                        <rescon:invokeInfo>
                            <rescon:service xsi:type="ns0:BusinessServiceRef" ref="K Library/pipeline/getPerthLibrary"/>
                        </rescon:invokeInfo>
                    </bpel:invoke>
                    <bpel:assign>
                        <bpel:extensionAssignOperation bea:name="Combine to AllBooks">
                            <trf:assign varName="getAllBooksCombinedList.responsePart">
                                <trf:expr>
                                    <expr:xqueryText>$getPerthLibrary.responsePart</expr:xqueryText>
                                </trf:expr>
                            </trf:assign>
                        </bpel:extensionAssignOperation>
                    </bpel:assign>
                </bpel:sequence>
            </bpel:elseif>
            <bpel:elseif>
                <bpel:condition>contains("brisbane library", normalize-space(translate($request.requestPart/lib:libraryName, 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz')))</bpel:condition>
                <bpel:sequence>
                    <bpel:empty/>
                    <bpel:invoke operation="getLibraryBooks" outputVariable="getBrisbaneLibrary"
                                 inputVariable="libraryRequest" partnerLink="getBrisbaneLibrary">
                        <rescon:invokeInfo>
                            <rescon:service xsi:type="ns0:BusinessServiceRef"
                                            ref="K Library/pipeline/getBrisbaneLibrary"/>
                        </rescon:invokeInfo>
                    </bpel:invoke>
                    <bpel:assign>
                        <bpel:extensionAssignOperation bea:name="Combine to AllBooks">
                            <trf:assign varName="getAllBooksCombinedList.responsePart">
                                <trf:expr>
                                    <expr:xqueryText>$getBrisbaneLibrary.responsePart</expr:xqueryText>
                                </trf:expr>
                            </trf:assign>
                        </bpel:extensionAssignOperation>
                    </bpel:assign>
                </bpel:sequence>
            </bpel:elseif>
            <bpel:else>
                <bpel:sequence>
                    <bpel:empty/>
                    <bpel:assign>
                        <bpel:extensionAssignOperation bea:name="DynamicBookList">
                            <trf:assign varName="getDynamicBooksList.responsePart">
                                <trf:expr>
                                    <expr:xqueryText>&lt;lib:result&gt;
    &lt;lib:libraryName&gt;&lt;/lib:libraryName&gt;
    &lt;lib:title&gt;&lt;/lib:title&gt;
    &lt;lib:author&gt;&lt;/lib:author&gt;
    &lt;lib:message&gt;Library could not be found.&lt;/lib:message&gt;
&lt;/lib:result&gt;</expr:xqueryText>
                                </trf:expr>
                            </trf:assign>
                        </bpel:extensionAssignOperation>
                    </bpel:assign>
                    <bpel:reply operation="getSpecificLibraryBooks" partnerLink="getDynamicBook"
                                variable="getDynamicBooksList"/>
                    <bpel:exit/>
                </bpel:sequence>
            </bpel:else>
        </bpel:if>
        <bpel:assign>
            <bpel:extensionAssignOperation bea:name="DynamicBookList">
                <trf:assign varName="getDynamicBooksList.responsePart">
                    <trf:expr>
                        <expr:xqueryTransform>
                            <expr:resource ref="K Library/query/getSpecificLibraryBooks"/>
                            <expr:param name="getCombinedLibrary">
                                <expr:path>$getAllBooksCombinedList.responsePart</expr:path>
                            </expr:param>
                            <expr:param name="getDynamicRequest">
                                <expr:path>$request.requestPart</expr:path>
                            </expr:param>
                        </expr:xqueryTransform>
                    </trf:expr>
                </trf:assign>
            </bpel:extensionAssignOperation>
        </bpel:assign>
        <bpel:assign>
            <bpel:extensionAssignOperation>
                <ns1:log>
                    <ns1:expr>
                        <expr:xqueryText>$getDynamicBooksList.responsePart</expr:xqueryText>
                    </ns1:expr>
                    <ns1:logLevel>error</ns1:logLevel>
                    <ns1:message>##########################################DYNAMIC BOOKS
                                 LIST##########################################</ns1:message>
                </ns1:log>
            </bpel:extensionAssignOperation>
        </bpel:assign>
        <bpel:reply partnerLink="getDynamicBook" operation="getSpecificLibraryBooks" variable="getDynamicBooksList"></bpel:reply>
    </bpel:sequence>
</bpel:process>